    <div id="copyAlert" class="alert"></div>

    <script>
        /* --- JAVASCRIPT FUNCTIONS --- */

        /**
         * Function to copy a link to the clipboard and show a confirmation alert.
         * @param {string} link - The actual referral link to be copied.
         * @param {string} name - The name of the link (e.g., "Groww link").
         */
        function copyLink(link, name) {
            // Create a temporary textarea element to hold the link
            const tempInput = document.createElement('textarea');
            tempInput.value = link;
            document.body.appendChild(tempInput);

            // Select the text and copy it
            tempInput.select();
            document.execCommand('copy');

            // Remove the temporary element
            document.body.removeChild(tempInput);

            // Show confirmation alert
            const alertBox = document.getElementById('copyAlert');
            alertBox.textContent = `${name} copied to clipboard!`;
            alertBox.classList.add('show');

            // Hide the alert after 3 seconds
            setTimeout(() => {
                alertBox.classList.remove('show');
            }, 3000);
        }

        // NOTE: The Community Share section is *simulated* here. 
        // A full submission system requires server-side code (like PHP, Python, or Node.js) and a database.
        // The `onclick` event on the placeholder card is a simple browser alert.
    </script>
